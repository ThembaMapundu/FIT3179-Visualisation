{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Energy Production in Australia (2008â€“2023)",
  "width": 800,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/ThembaMapundu/FIT3179-Visualisation/refs/heads/main/Data/energy_data_long.csv"
  },
  "transform": [
    {
      "filter": "datum['Energy Type'] == energyType && datum.Year == year"
    },
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ThembaMapundu/FIT3179-Visualisation/refs/heads/main/Data/Australiamap.json",
          "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
        },
        "key": "properties.STE_NAME21"
      },
      "as": "geo"
    }
  ],
  "params": [
    {
      "name": "energyType",
      "value": "renewable",
      "bind": {
        "input": "select",
        "options": ["renewable", "non renewable"],
        "labels": ["Renewable", "Non-Renewable"],
        "name": "Energy Type: "
      }
    },
    {
      "name": "year",
      "value": "2022-23",
      "bind": {
        "input": "select",
        "options": [
          "2008-09", "2009-10", "2010-11", "2011-12", "2012-13", 
          "2013-14", "2014-15", "2015-16", "2016-17", "2017-18", 
          "2018-19", "2019-20", "2020-21", "2021-22", "2022-23"
        ],
        "name": "Year: "
      }
    }
  ],
  "projection": {"type": "mercator"},
  "mark": {"type": "geoshape", "stroke": 0.5},
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "Energy Value",
      "type": "quantitative",
      "title": "Energy (GWh)",
      "scale": {
        "scheme": {"signal": "energyType == 'renewable' ? 'greens' : 'browns'"}
      }
    },
    "tooltip": [
      {"field": "State", "title": "State"},
      {"field": "Energy Type", "title": "Type"},
      {"field": "Year", "title": "Year"},
      {"field": "Energy Value", "title": "Energy (GWh)", "format": ".1f"}
    ]
  },
  "config": {
    "view": {"stroke": null}
  }
}
